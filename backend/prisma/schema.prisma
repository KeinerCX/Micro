// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedIndexes"]
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model AccessCode {
  @@map("accesscodes")

  id     String  @id @default(auto()) @map("_id") @db.ObjectId

  code   String  @unique
}

model User {
  @@map("users")

  id          String   @map("_id") @id

  username    String   @unique

  @@index([displayname])
  displayname String?

  @@index([flags])
  flags       String[]

  email       String   @unique

  @@index([password])
  password    String?

  @@index([avatar])
  avatar      String?

  @@index([posts])
  posts       String[]

  @@index([joined])
  joined      DateTime

  @@index([sessions])
  sessions    String[]
}

model Post {
  @@index([author, body, images, flags, replies, posted])

  id      String  @map("_id") @id

  author  String

  body    String

  images  String[]

  flags   String[]

  replies String[]

  posted  DateTime
}